FROM migvivcam/apache2:pr4

# Copiamos la configuraci칩n de apache2 con los parametros seguros
COPY ./apache2.conf /etc/apache2/apache2.conf

# Copiamos la configuraci칩n modificada del modulo SSL
COPY ./ssl.conf /etc/apache2/mods-available/ssl.conf

# Copiamos la p치gina PHP para realizar pruebas en el servidor
COPY ./post.php /var/www/html/post.php

# Se habilitan modulos requeridos para configurar la seguridad de apache2
RUN a2enmod headers
RUN a2enmod rewrite

# Se deshabilitan modulos reduntantes o que muestran informaci칩n extra
RUN a2dismod dav info

# Expone el puerto 80 y 443
EXPOSE 80 443

# Inicia Apache en primer plano
CMD ["/usr/sbin/apache2ctl", "-D", "FOREGROUND"]

